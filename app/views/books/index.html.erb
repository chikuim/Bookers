<h1>Books</h1>
<% @books.each do |book| %>
  <p>タイトル</p>
  <span><%= book.title %></span>
  <p>本文</p>
  <span><%= book.body %></span>
  <%= link_to "show", book_path(book) %>
  <%= link_to "edit", edit_book_path(book) %>
  <%= link_to "destroy", book_path(book),method: :delete, "data-confirm" => "本当に削除しますか？" %>

<% end %>

<h1>新規投稿</h1>
<!-- form_with部分 -->
<%= form_with model: @book, url:'/books', local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= f.submit '投稿' %>

<% end %>
