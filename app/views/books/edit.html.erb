<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="alert">
    <p>error</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<!-- form_with部分 -->
<%= form_with model: @book, url:book_path, local:true do |f| %>
  <div class="field">
    <label for="book_title">Title</div>
  
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>

<% end %>

<%= link_to "Show", book_path(@book) %>
<%= link_to "Back", books_path %>

